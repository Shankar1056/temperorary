            <RelativeLayout
                android:id="@+id/relation11"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@id/relation10"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp" android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/aefi38"/>

                <EditText
                    android:id="@+id/specify_other"
                    android:layout_width="180dp" android:inputType="" 
                    android:layout_height="40dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="70dp"
                    android:layout_marginStart="200dp" android:background="@drawable/border"
                    android:backgroundTint="#FFFFFF"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation12"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@id/relation11"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp" android:gravity="center"
                    android:text="@string/aefi39" />
                <EditText
                    android:id="@+id/event_time"
                    android:layout_width="180dp" android:inputType="" 
                    android:layout_marginStart="200dp" android:background="@drawable/border"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FFFFFF"

                    android:layout_height="40dp"
                    android:layout_marginLeft="200dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation13"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@id/relation12"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp" android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Event description"/>
                <EditText
                    android:id="@+id/severe"
                    android:layout_width="180dp" android:inputType="" 
                    android:layout_height="40dp"
                    android:layout_marginStart="200dp" android:background="@drawable/border"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FFFFFF"

                    android:layout_marginLeft="200dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relation13"
                android:layout_marginStart="80dp" android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="80dp"
                >

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginLeft="0dp"
                    android:text="Cancel"
                    android:layout_marginStart="0dp" android:background="#FFF"
                    />
                <Button
                    android:id="@+id/button2"
                    android:layout_marginStart="120dp" android:background="#FFF"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"

                    android:gravity="center"
                    android:text="Submit" />

            </RelativeLayout>
