<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"    >

<RelativeLayout
    android:id="@+id/relation1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Asha work allocated work"
        android:textStyle="bold"
        android:gravity="center"
        />
</RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relation1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relation3"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"

                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" android:gravity="center"
                android:text="UID"
                />
            <EditText
                android:id="@+id/btn_uid"
                android:layout_width="200dp"
                android:backgroundTint="#FFFFFF"
                android:layout_marginStart="150dp" android:background="@drawable/border"
android:paddingLeft="10dp" android:paddingStart="10dp" 
                android:enabled="false"
                android:inputType="textPersonName"
                android:hint="UID Number"
                android:layout_height="40dp"
                android:layout_marginLeft="150dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relation4"
            android:layout_width="fill_parent"
            android:layout_below="@+id/relation3"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" android:gravity="center"
                android:textStyle="bold"

                android:text="Latitude and longitude" />
            <EditText
                android:id="@+id/btn_long"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp" android:paddingStart="10dp" 

                android:layout_marginTop="20dp"
                android:backgroundTint="#FFFFFF"
                android:layout_marginStart="150dp" android:background="@drawable/border"
                android:layout_marginLeft="150dp"
                android:inputType="number"/>

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="300dp"
                android:layout_marginStart="300dp" android:background="#3F51B5"

                android:layout_marginTop="20dp"
                android:contentDescription="TODO" android:src="@drawable/maidi"
                />
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation5"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation4"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"

                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:text="State" />
                <Spinner
                    android:id="@+id/btn_State"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_marginLeft="150dp"
                    android:entries="@array/state"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation6"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation5"
                android:layout_marginTop="20dp">
                <TextView

                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="District" />
                <Spinner
                    android:id="@+id/btn_district"
                    android:layout_width="200dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_height="40dp"
                    android:entries="@array/tab_B"

                    android:layout_marginLeft="150dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation7"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation6"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="Block" />
                <Spinner
                    android:id="@+id/btn_Block"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#FFFFFF"
                    android:entries="@array/tab_D"

                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_marginLeft="150dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation8"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation7"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"

                    android:layout_marginStart="20dp" android:gravity="center"
                    android:text="Village" />
                <EditText
                    android:id="@+id/btn_Village"
                    android:layout_width="200dp" android:inputType="" 
                    android:layout_height="40dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_marginLeft="150dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation9"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation8"
                android:layout_marginTop="20dp">
                <TextView

                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="Tola" />
                <Spinner
                    android:id="@+id/btn_tola"
                    android:layout_width="200dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"
                    android:entries="@array/finalclassifion"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation100"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relation9"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:src="@drawable/dotted"
                    android:contentDescription="TODO" android:layerType="software" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation10"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation9"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="Child Details" />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation11"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation10"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="Child Name" />
                <EditText
                    android:id="@+id/btn_childname"
                    android:paddingStart="10dp" android:textStyle="bold"
                    android:inputType="" android:paddingLeft="10dp"

                    android:backgroundTint="#FFFFFF"
                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation12"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation11"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="Mother Name" />
                <EditText
                    android:id="@+id/btn_mothername"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_width="200dp"
                    android:inputType="" android:paddingLeft="10dp" android:paddingStart="10dp" 

                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation13"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation12"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="Father Name" />
                <EditText
                    android:id="@+id/btn_fathername"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_width="200dp"
                    android:inputType="" android:paddingLeft="10dp" android:paddingStart="10dp" 

                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation14"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation13"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"

                    android:layout_marginStart="20dp" android:gravity="center"
                    android:text="Mobile" />
                <EditText
                    android:id="@+id/btn_mobile"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_width="200dp"
                    android:paddingLeft="10dp" android:paddingStart="10dp" 
                    android:digits="10"
                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"
                    android:inputType="number"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation15"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation14"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="Dob" />
                <EditText
                    android:id="@+id/btn_dob1"
                    android:paddingLeft="10dp" android:paddingStart="10dp" 

                    android:backgroundTint="#FFFFFF"
                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"
                    android:inputType="date"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation16"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation15"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"

                    android:layout_marginStart="20dp" android:gravity="center"
                    android:text="Place of Birth" />
                <EditText
                    android:id="@+id/btn_PoB"
                    android:paddingLeft="10dp" android:paddingStart="10dp" 

                    android:backgroundTint="#FFFFFF"
                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"
                    android:inputType="text"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation17"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation16"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="Social Category" />
                <Spinner
                    android:id="@+id/btn_social"
                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:backgroundTint="#FFFFFF"
android:entries="@array/finalclassifion"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation18"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation17"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="Birth type" />
                <EditText
                    android:id="@+id/btn_birthtype"
                    android:backgroundTint="#FFFFFF"
                    android:paddingLeft="10dp" android:paddingStart="10dp" 

                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"
                    android:inputType="text"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation19"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation18"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="Gestation Age" />
                <EditText
                    android:id="@+id/btn_gestication"
                    android:backgroundTint="#FFFFFF"
                    android:paddingLeft="10dp" android:paddingStart="10dp" 

                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"
                    android:inputType="number"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation20"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation19"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="If Baywas Weight at birth" />
                <CheckBox
                    android:id="@+id/checkbox1"

                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginStart="150dp" android:text="Yes"/>
                <CheckBox
                    android:id="@+id/checkbox2"

                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginStart="200dp" android:text="No"/>
<Spinner
    android:id="@+id/spinner1"
    android:layout_width="90dp"
    android:layout_height="40dp"

    android:entries="@array/finalclassifion"
    android:layout_marginStart="150dp" android:background="@drawable/border"

    android:layout_marginTop="40dp"
    android:layout_marginLeft="150dp"/>
<Spinner
    android:id="@+id/spinner2"
    android:layout_width="90dp"
    android:layout_height="40dp"
    android:layout_marginStart="250dp" android:background="@drawable/border"
android:layout_marginTop="40dp"
    android:layout_marginLeft="250dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation21"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation20"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="Any abnormal at birth" />
                <CheckBox
                    android:id="@+id/checkbox3"

                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginStart="150dp" android:text="Yes"/>
                <CheckBox
                    android:id="@+id/checkbox4"

                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginStart="200dp" android:text="No"/>
                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="90dp"
                    android:layout_height="40dp"

                    android:entries="@array/finalclassifion"
                    android:layout_marginStart="150dp" android:background="@drawable/border"

                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="150dp"/>
                <Spinner
                    android:id="@+id/spinner4"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="250dp" android:background="@drawable/border"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="250dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation22"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation21"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:textStyle="bold"

                    android:text="Remarks" />
                <EditText
                    android:id="@+id/btn_remarks"
                    android:backgroundTint="#FFFFFF"
                    android:paddingLeft="10dp" android:paddingStart="10dp" 

                    android:layout_marginStart="150dp" android:background="@drawable/border"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="150dp"
                    android:inputType="text"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation23"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation22"
                android:layout_marginTop="30dp">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="120dp"
                    android:contentDescription="TODO" android:src="@drawable/baby"
                    android:layout_marginStart="120dp" android:background="@drawable/boder"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation24"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relation23"
                android:layout_marginTop="30dp">
               <Button
                   android:id="@+id/btn_cancel"

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="40dp"
                   android:layout_marginStart="40dp" android:text="Cancel"/>
<Button
    android:id="@+id/btn_submit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="200dp" android:text="Submit"
    android:layout_marginLeft="200dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>