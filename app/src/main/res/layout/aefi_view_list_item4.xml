<ScrollView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/formbc1"

    xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/relation1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:layout_marginTop="40dp"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="70dp"
                    android:layout_marginStart="5dp" android:gravity="center"
                    android:text="@string/aefi28" />
                <CheckBox
                    android:id="@+id/severeyes"
                    android:layout_marginStart="200dp" android:text="@string/surveyyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"/>
                <CheckBox
                    android:id="@+id/severeno"
                    android:layout_marginStart="280dp" android:text="@string/surveyno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relation2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/relation1"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp" android:gravity="center"
