                <CheckBox
                    android:id="@+id/encephalopathyno"
                    android:layout_marginStart="280dp" android:text="@string/surveyno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation6"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/relation5"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp" android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/aefi33"/>
                <CheckBox
                    android:id="@+id/toxicyes"
                    android:layout_marginStart="200dp" android:text="@string/surveyyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"/>
                <CheckBox
                    android:id="@+id/toxicno"
                    android:layout_marginStart="280dp" android:text="@string/surveyno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation7"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/relation6"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp" android:gravity="center"
