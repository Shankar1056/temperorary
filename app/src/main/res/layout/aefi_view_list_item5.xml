<ScrollView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/formbc1"

    xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/relation1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:layout_marginTop="40dp"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="70dp"
                    android:layout_marginStart="5dp" android:gravity="center"
                    android:text="@string/aefi43" />
                <CheckBox
                    android:id="@+id/severeyes"
                    android:layout_marginStart="200dp" android:text="@string/surveyyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"/>
                <CheckBox
                    android:id="@+id/severeno"
                    android:layout_marginStart="280dp" android:text="@string/surveyno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation12"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/relation1"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-30dp"
                    android:layout_marginStart="-30dp" android:gravity="center"
                    android:text="@string/aefi44" />
                <CheckBox
                    android:id="@+id/deathyes"
                    android:layout_marginStart="200dp" android:text="@string/surveyyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"/>
                <CheckBox
                    android:id="@+id/deathno"
                    android:layout_marginStart="280dp" android:text="@string/surveyno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relation12"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:text="@string/aefi45" />
                <CheckBox
                    android:id="@+id/life_threateningyes"
                    android:layout_marginStart="200dp" android:text="@string/surveyyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"/>
                <CheckBox
                    android:id="@+id/life_threateningno"
                    android:layout_marginStart="280dp" android:text="@string/surveyno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relation2"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-10dp" android:gravity="center"
                    android:layout_marginLeft="-10dp"
                    android:text="@string/aefi46" />
                <CheckBox
                    android:id="@+id/persistententyes"
                    android:layout_marginStart="200dp" android:text="@string/surveyyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"/>
                <CheckBox
                    android:id="@+id/persistententno"
                    android:layout_marginStart="280dp" android:text="@string/surveyno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relation3"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:text="@string/aefi47" />
                <CheckBox
                    android:id="@+id/congantalyes"
                    android:layout_marginStart="200dp" android:text="@string/surveyyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"/>
                <CheckBox
                    android:id="@+id/congantalno"
                    android:layout_marginStart="280dp" android:text="@string/surveyno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relation5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relation4"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="@string/aefi48" />
                <CheckBox
                    android:id="@+id/otheryes"
                    android:layout_marginStart="200dp" android:text="@string/surveyyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"/>
                <CheckBox
                    android:id="@+id/otherno"
                    android:layout_marginStart="280dp" android:text="@string/surveyno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relation6"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aefi50"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:layout_marginTop="10dp"/>
                <Spinner
                    android:id="@+id/outcome"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="200dp" android:background="@drawable/border"
                    android:backgroundTint="#FFFFFF"

                    android:layout_marginLeft="200dp"
                    android:entries="@array/outcome"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relation5"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/aefi49"
                    android:layout_marginStart="20dp" android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/specify"
                    android:layout_width="180dp" android:inputType="" 
                    android:layout_marginStart="200dp" android:background="@drawable/border"
                    android:backgroundTint="#FFFFFF"
                    android:layout_height="40dp"
                    android:layout_marginLeft="200dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation8"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_below="@id/relation7"
                android:layout_marginLeft="-20dp"
                android:layout_marginStart="-20dp" android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="40dp"
                    android:text="@string/aefi51"
                    android:layout_marginStart="40dp" android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/past"
                    android:layout_width="180dp" android:inputType="" 
                    android:ems="10"
                    android:backgroundTint="#FFFFFF"

                    android:layout_height="40dp"
                    android:layout_marginLeft="220dp"
                    android:layout_marginStart="220dp" android:background="@drawable/border"

                    android:layout_marginTop="20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation9"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relation8"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" android:text="@string/aefi55" />
                <EditText
                    android:id="@+id/date_investigation"
                    android:layout_width="200dp" android:inputType="" 
                    android:layout_height="40dp"
                    android:layout_marginStart="200dp" android:background="@drawable/border"
                    android:backgroundTint="#FFFFFF"

                    android:layout_marginLeft="200dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation10"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relation9"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="@string/aefi56" />
                <EditText
                    android:id="@+id/date_done"
                    android:layout_width="200dp" android:inputType="" 
                    android:layout_marginStart="200dp" android:background="@drawable/border"
                    android:backgroundTint="#FFFFFF"

                    android:layout_height="40dp"
                    android:layout_marginLeft="200dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relation11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relation10"

                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finalclassifion"
                    android:layout_marginStart="20dp" android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>

                <Spinner
                    android:id="@+id/finalclassification"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="200dp" android:background="@drawable/border"
                    android:backgroundTint="#FFFFFF"

                    android:layout_marginLeft="200dp"
                    android:entries="@array/finalclassifion"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relation11"
                android:gravity="center"
                android:layout_marginTop="90dp">
<Button
    android:id="@+id/button1"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:text="Cancel"/>
                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginStart="120dp" android:background="#FFF"

                    android:gravity="center"
                    android:text="Submit" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
