<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/formbc1"

    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relation1"
        android:layout_width="fill_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/survey19" />
        <EditText
            android:id="@+id/houseno"
            android:layout_marginStart="230dp" android:background="@drawable/border"
            android:backgroundTint="#FFFFFF"

            android:layout_width="120dp" android:inputType="" 
            android:layout_marginLeft="230dp"
            android:layout_height="40dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relation2"
        android:layout_below="@id/relation1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/survey20"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/family_head"
            android:layout_width="200dp" android:inputType="" 
            android:layout_height="40dp"
            android:layout_marginStart="200dp" android:background="@drawable/border"
            android:backgroundTint="#FFFFFF"

            android:layout_alignParentTop="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relation3"
        android:layout_width="wrap_content"
        android:layout_below="@id/relation2"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/survey21"

            />

        <EditText
            android:id="@+id/fathername"
            android:layout_width="200dp" android:inputType="" 
            android:layout_height="40dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="200dp" android:background="@drawable/border"
            android:backgroundTint="#FFFFFF" />



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relation4"
        android:layout_width="wrap_content"
        android:layout_below="@id/relation3"
        android:layout_marginTop="20dp"
        android:layout_height="60dp">

        <TextView
            android:layout_width="158dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" android:gravity="center"

            android:text="@string/survey23" />
        <Spinner
            android:id="@+id/member"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:entries="@array/member"
            android:layout_marginLeft="200dp"
            android:layout_marginStart="200dp" android:background="@drawable/border"
            android:backgroundTint="#FFFFFF"

            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relation5"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_below="@id/relation4"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="1000dp"
            android:layout_marginStart="5dp" android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="@string/survey24"/>
        <CheckBox
            android:id="@+id/newbornYes"
            android:text="@string/surveyyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginStart="200dp" android:layout_marginTop="30dp"/>
        <CheckBox
            android:id="@+id/newbornNo"
            android:text="@string/surveyno"
            android:layout_marginStart="280dp" android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relation6"
        android:layout_width="fill_parent"
        android:layout_below="@id/relation5"
        android:layout_marginTop="20dp"
        android:layout_height="60dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/survey25" />
        <CheckBox
            android:id="@+id/childYes"
            android:text="@string/surveyyes"
            android:layout_width="wrap_content"
            android:layout_marginStart="200dp" android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"/>
        <CheckBox
            android:id="@+id/childNo"
            android:text="@string/surveyno"
            android:layout_width="wrap_content"
            android:layout_marginStart="290dp" android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relation7"
        android:layout_below="@id/relation6"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp" android:background="#FFF"

            android:layout_marginTop="0dp"
            android:text="Cancel" />
        <Button
            android:id="@+id/button2"
            android:layout_marginStart="240dp" android:background="#FFF"


            android:layout_width="wrap_content"
            android:layout_marginLeft="240dp"
            android:text="Submit"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
    </ScrollView>
