<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/formbc1"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relation1"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"

            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="Date" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="200dp"
                android:backgroundTint="#FFFFFF"
                android:layout_marginLeft="140dp"
                android:layout_height="40dp"
                android:layout_marginStart="140dp" android:background="@drawable/border"
                android:paddingLeft="10dp" android:paddingStart="10dp" 
                android:ems="10"
                android:inputType="date"
                />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relation2"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"

            android:layout_below="@+id/relation1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp" android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Select Week" />

            <Spinner
                android:id="@+id/select_week"
                android:layout_width="200dp"
                android:layout_marginLeft="140dp"
                android:layout_height="40dp"
                android:backgroundTint="#FFFFFF"

                android:ems="10"
                android:layout_marginStart="140dp" android:background="@drawable/border"

                android:entries="@array/tab_A"
                android:inputType="date" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relation3"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"

            android:layout_below="@+id/relation2"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="Select Village" />

            <Spinner
                android:id="@+id/select_village"
                android:layout_width="200dp"
                android:layout_marginLeft="140dp"
                android:layout_height="40dp"
                android:ems="10"
                android:layout_marginStart="140dp" android:background="@drawable/border"
                android:backgroundTint="#FFFFFF"

                android:entries="@array/tab_B"
                android:inputType="date" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relation4"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"

            android:layout_below="@+id/relation3"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="Select State" />

            <Spinner
                android:id="@+id/Select_state"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="140dp"
                android:ems="10"
                android:layout_marginStart="140dp" android:background="@drawable/border"
                android:backgroundTint="#FFFFFF"

                android:entries="@array/tab_C"
                android:inputType="date" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relation5"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"

            android:layout_below="@+id/relation4"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" android:layout_marginTop="10dp"
                android:text="Select district" />

            <Spinner
                android:id="@+id/select_block"
                android:layout_width="200dp"
                android:layout_marginLeft="140dp"
                android:layout_height="40dp"
                android:ems="10"
                android:layout_marginStart="140dp" android:background="@drawable/border"
                android:backgroundTint="#FFFFFF"

                android:entries="@array/tab_D"
                android:inputType="date" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relation6"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"

            android:layout_below="@+id/relation5"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="Select Vaccine" />

            <Spinner
                android:id="@+id/select_vaccine"
                android:layout_width="200dp"
                android:layout_marginLeft="140dp"
                android:layout_height="40dp"
                android:ems="10"
                android:layout_marginStart="140dp" android:background="@drawable/border"
                android:backgroundTint="#FFFFFF"

                android:entries="@array/tab_E"
                android:inputType="date" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relation10"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"

            android:layout_below="@+id/relation6"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="Plan hour" />

            <Spinner
                android:id="@+id/select_planhours"
                android:layout_width="200dp"
                android:layout_marginLeft="140dp"
                android:layout_height="40dp"
                android:ems="10"
                android:layout_marginStart="140dp" android:background="@drawable/border"
                android:backgroundTint="#FFFFFF"

                android:entries="@array/Planhours"
                android:inputType="date" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relation9"
            android:layout_width="wrap_content"
            android:layout_below="@+id/relation10"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp" android:background="#FFF"
                android:text="cancel"
                />
            <Button
                android:id="@+id/button2"
                android:layout_marginLeft="240dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="240dp" android:background="#FFF"
                android:text="Sumbit"/>


        </RelativeLayout>
        <!-- <View
             android:id="@+id/separator"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#858585" />
             </RelativeLayout>

     -->
    </RelativeLayout>
</ScrollView>